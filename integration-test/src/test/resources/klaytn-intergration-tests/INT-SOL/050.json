{
  "tcID":"INT-SOL-050",
  "tcName":"ERC20.approve.excessiveAmount",
  "deploy":{
    "ERC20Mock":{
      "file":"contracts/mocks/ERC20Mock.sol",
      "constructorParams":["env.sender", "100"]
    }
  },
  "test":[
    {
      "tx":{
        "from":"env.sender",
        "type":"LEGACY",
        "to":"randomAcc1",
        "value":"1000000000000000000",
        "gas":100000,
        "data":""
      },
      "expected":{
        "status":true
      }
    },
    {
      "send":{
        "from":"env.sender",
        "to":"ERC20Mock",
        "gas":100000,
        "method":"approve",
        "params":["randomAcc1", "101"]
      },
      "expected":{
        "status":true,
        "events":{
          "Approval":
          {
            "owner":"env.sender",
            "spender":"randomAcc1",
            "value":"101"
          }
        }
      }
    },
    {
      "call":{
        "from":"env.sender",
        "to":"ERC20Mock",
        "method":"allowance",
        "params":["env.sender", "randomAcc1"]
      },
      "expected":{
        "status":true,
        "returns":"101"
      }
    }
  ]
}


