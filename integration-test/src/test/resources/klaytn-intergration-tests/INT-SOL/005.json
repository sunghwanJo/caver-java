{
  "tcID":"INT-SOL-005",
  "tcName":"ERC20.transfer.enoughBalance",
  "deploy":{
    "ERC20Mock":{
      "file":"contracts/mocks/ERC20Mock.sol",
      "constructorParams":["env.sender", "100"]
    }
  },
  "test":[
    {
      "send":{
        "from":"env.sender",
        "to":"ERC20Mock",
        "method":"transfer",
        "gas":100000,
        "params":["env.accounts.acc1", "100"]
      },
      "expected":{
        "status":true
      }
    },
    {
      "call":{
        "from":"env.sender",
        "to":"ERC20Mock",
        "method":"balanceOf",
        "params":["env.accounts.acc1"]
      },
      "expected":{
        "status":true,
        "returns":"100"
      }
    },
    {
      "call":{
        "from":"env.sender",
        "to":"ERC20Mock",
        "method":"balanceOf",
        "params":["env.sender"]
      },
      "expected":{
        "status":true,
        "returns":"0"
      }
    }
  ]
}

